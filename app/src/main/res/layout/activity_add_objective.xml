<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/purple_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Add Objective"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_30ssp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="31dp"
            android:layout_marginTop="@dimen/_32sdp"
            app:srcCompat="@drawable/arrow" />

        <ImageView
            android:id="@+id/dltBtn"
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="31dp"
            android:layout_marginTop="@dimen/_32sdp"
            app:srcCompat="@drawable/delete_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:text="Updating your profile?"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_95sdp"
                android:layout_marginStart="@dimen/_20sdp" />
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            android:text="Word limit is upto 50 letters"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/_115sdp"
            android:layout_marginStart="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_160sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Objective"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginStart="30dp"
                app:strokeWidth="0.3dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="@dimen/_15sdp">

                <EditText
                    android:id="@+id/objective"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_gravity="center"
                    android:theme="@style/NoUnderlineEditTextStyle" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_purple"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Save"
                android:textColor="@color/white"
                app:backgroundTint="#59239E"
                app:cornerRadius="32dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
