<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/purple_bg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Edit Intro"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_30ssp"/>



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="31dp"
            android:layout_marginTop="@dimen/_32sdp"
            app:srcCompat="@drawable/arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:text="Updating your profile?"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_95sdp"
                android:layout_marginStart="@dimen/_20sdp" />



        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            android:text="* indicates required"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/_115sdp"
            android:layout_marginStart="@dimen/_20sdp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_160sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Institution Name *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginStart="30dp"
                app:strokeWidth="0.3dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="@dimen/_15sdp">


                <EditText
                    android:id="@+id/institutionName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:theme="@style/NoUnderlineEditTextStyle" />



            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"

                android:fontFamily="@font/opensans_regular"
                android:text="Institution Logo *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_4sdp">

                <!-- ImageView for the company logo -->
                <ImageView
                    android:id="@+id/companyLogo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/company_logo"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/textUploadLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Logo"
                    android:textColor="@color/light_purple"
                    android:textStyle="italic | bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp" >

                </TextView>
            </LinearLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Certification Name *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginStart="30dp"
                app:strokeWidth="0.3dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="@dimen/_15sdp">


                <EditText
                    android:id="@+id/certificationName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:theme="@style/NoUnderlineEditTextStyle" />



            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Certification Level *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginStart="30dp"
                app:strokeWidth="0.3dp"
                android:backgroundTint="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/certificationLevelSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@color/white"
                        android:prompt="@string/none_selected"/>

                    <ImageView
                        android:id="@+id/dropdownImage"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dropdown"
                        android:layout_marginEnd="13dp"
                        android:contentDescription="drop_down_icon"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Starting Date *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginStart="30dp"
                app:strokeWidth="0.3dp"
                android:backgroundTint="@color/white">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/startingDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_regular"
                        android:singleLine="true"
                        android:gravity="center_vertical" />

                    <Button
                        android:id="@+id/startingDateButt"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_regular"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/Calendar"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/calendar_icon"
                        android:layout_marginEnd="13dp"
                        android:contentDescription="drop_down_icon"/>
                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Ending Date *"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_30sdp"
                android:layout_marginStart="30dp"
                app:strokeWidth="0.3dp"
                android:backgroundTint="@color/white">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/endingDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_regular"
                        android:singleLine="true"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/endingCalendar"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/calendar_icon"
                        android:layout_marginEnd="13dp"
                        android:contentDescription="drop_down_icon"/>
                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>



            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />




            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_purple"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Save"
                android:textColor="@color/white"
                app:backgroundTint="#59239E"
                app:cornerRadius="32dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />




        </LinearLayout>

    </RelativeLayout>
</ScrollView>