<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_color">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:background="@drawable/purple_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-110dp"
                android:layout_marginBottom="-40dp">

                <ImageView
                    android:id="@+id/backtoDashboard"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/arrow"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_30ssp">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Candidate Details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_30ssp" />

                <ImageView
                    android:id="@+id/downloadCV"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/candidate_cv"
                    android:layout_marginStart="@dimen/_260sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_30ssp">
                </ImageView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_75sdp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="‣ FullName: "
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/_15sdp"/>


                    <TextView
                        android:id="@+id/userFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text=" "
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="‣ Email ID: "
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/_15sdp"/>


                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text=" "
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="‣ Phone No: "
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/_15sdp"/>


                    <TextView
                        android:id="@+id/userPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text=" "
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="‣ Commute Decision: "
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/_15sdp"/>


                    <TextView
                        android:id="@+id/userCommute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text=" "
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="‣ Willing Time: "
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/_15sdp"/>


                    <TextView
                        android:id="@+id/userWillingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text=" "
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text=" Hours"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="‣ Description: "
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="@dimen/_15sdp"/>



                </LinearLayout>
                <TextView
                    android:id="@+id/userDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:text=" Hours"
                    android:layout_marginTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp">
                </View>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_purple"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Email Candidate"
                    android:textColor="@color/white"
                    app:backgroundTint="#59239E"
                    app:cornerRadius="32dp" />



            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>